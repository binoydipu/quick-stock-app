<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/background_color"
    app:strokeWidth="0dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="14dp">

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Mr. User Name"
            android:textColor="@color/black_text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/staff_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Staff ID: 12345"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name_tv" />

        <TextView
            android:id="@+id/user_email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: abcd123@quickstock.com"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/staff_id_tv" />

        <TextView
            android:id="@+id/user_mobile_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile: 01898-122233"
            android:textColor="@color/black_text"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_email_tv" />

        <ImageView
            android:id="@+id/verified_user_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:contentDescription="Verified Staff"
            android:src="@drawable/verify_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/accept_user_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/accept_icon"
            android:contentDescription="Accept Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/decline_user_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/decline_icon"
            android:contentDescription="Decline Staff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
