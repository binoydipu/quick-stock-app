<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuickStock" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="android:statusBarColor">#E2DADA</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/light_background</item>
        <!--        <item name="fontFamily">@font/moresugar_regular</item>-->
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColorPrimary">@color/black_text</item>
    </style>

    <style name="Theme.QuickStock" parent="Base.Theme.QuickStock" />

    <!-- Custom style for TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="hintTextColor">@color/hint_color_selector</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/sky</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeErrorColor">@color/red</item>
    </style>

</resources>